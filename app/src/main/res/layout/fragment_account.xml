<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/logo"
            android:id="@+id/logo"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:background="@color/colorWhite">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/ic_phone2"
               android:text="XXXXXXXXXX"
               android:id="@+id/txtUserMobile"
               android:layout_margin="@dimen/_10sdp"
               android:gravity="center_vertical"
               android:drawablePadding="@dimen/_5sdp"
               android:textColor="@color/colorBlack"
               android:fontFamily="@font/ubuntu_r"
               android:drawableStart="@drawable/ic_phone2" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/ic_location_b"
               android:id="@+id/txtUserCurrentAdd"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:gravity="center_vertical"
               android:drawablePadding="@dimen/_5sdp"
               android:textColor="@color/colorBlack"
               android:fontFamily="@font/ubuntu_r"
               android:drawableStart="@drawable/ic_location_b" />

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/colorLightGery"
               android:layout_marginTop="@dimen/_10sdp"/>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="@dimen/_40sdp"
               android:drawableLeft="@drawable/ic_location_b"
               android:text="My Address"
               android:id="@+id/txtAdd"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:gravity="center_vertical"
               android:paddingTop="@dimen/_5sdp"
               android:paddingBottom="@dimen/_5sdp"
               android:drawablePadding="@dimen/_5sdp"
               android:textColor="@color/colorBlack"
               android:fontFamily="@font/ubuntu_r"
               android:drawableStart="@drawable/ic_location_b" />

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/colorLightGery" />


           <TextView
               android:layout_width="match_parent"
               android:layout_height="@dimen/_40sdp"
               android:drawableLeft="@drawable/ic_unlock_b"
               android:text="Change Password"
               android:id="@+id/txtChange"
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_10sdp"
               android:gravity="center_vertical"
               android:paddingTop="@dimen/_5sdp"
               android:paddingBottom="@dimen/_5sdp"
               android:drawablePadding="@dimen/_5sdp"
               android:textColor="@color/colorBlack"
               android:fontFamily="@font/ubuntu_r"
               android:drawableStart="@drawable/ic_unlock_b" />

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/colorLightGery" />



       </LinearLayout>



    </LinearLayout>

</LinearLayout>